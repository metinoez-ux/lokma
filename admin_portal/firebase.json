{
    "hosting": {
        "site": "lokma",
        "source": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "/zohoverify/**",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "text/html"
                    }
                ]
            },
            {
                "source": "/.well-known/apple-app-site-association",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            },
            {
                "source": "/.well-known/assetlinks.json",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ]
            }
        ],
        "frameworksBackend": {
            "region": "europe-west1",
            "memory": "2GiB",
            "maxInstances": 10,
            "timeoutSeconds": 300,
            "env": [
                {
                    "variable": "FIREBASE_SERVICE_ACCOUNT_KEY",
                    "secret": "FB_SERVICE_ACCOUNT"
                },
                {
                    "variable": "GEMINI_API_KEY",
                    "secret": "GEMINI_API_KEY"
                },
                {
                    "variable": "ANTHROPIC_API_KEY",
                    "secret": "ANTHROPIC_API_KEY"
                }
            ]
        }
    },
    "functions": {
        "source": "functions",
        "codebase": "mira-notifications",
        "runtime": "nodejs20"
    },
    "storage": {
        "rules": "storage.rules"
    },
    "firestore": {
        "rules": "firestore.rules"
    }
}