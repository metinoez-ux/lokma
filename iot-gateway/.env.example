# ==============================================================================
# LOKMA IoT Gateway — Environment Configuration
# ==============================================================================

# Server
PORT=3999
API_KEY=your-secret-api-key-here

# Amazon Alexa (alexa-remote2)
ALEXA_COOKIE=        # Amazon cookie string (auto-generated on first login)
ALEXA_PROXY_OWN_IP=  # Your server's IP (for cookie proxy)
ALEXA_LANGUAGE=de-DE # de-DE or tr-TR

# WLED LED Strip(s) — comma separated IPs for multiple strips
WLED_DEVICES=192.168.1.50

# Philips Hue (optional)
HUE_BRIDGE_IP=
HUE_USERNAME=
HUE_LIGHT_IDS=1,2,3
